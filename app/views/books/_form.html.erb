<%= form_with model:book,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>




  <% if book.id === nil %>
  
    <div class="form-group" id="star">
      <%= f.label :rate %>
      <%= f.hidden_field :rate, id: :review_star, class:'form-control' %>
    </div>
    <script>
    $(document).on('turbolinks:load', function() {
      $('#star').empty();
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'book[rate]',
        half: true,
      });
    })
    </script>

    <div class="form-group" id="star_second">
      <%= f.label :rate_second %>
      <%= f.hidden_field :rate_second, id: :review_star, class:'form-control' %>
    </div>
    <script>
    $(document).on('turbolinks:load', function() {
      $('#star_second').empty();
      $('#star_second').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'book[rate_second]',
        half: true,
      });
    })
    </script>

    <div class="form-group" id="star_all">
      <%= f.label :rate_all %>
      <%= f.hidden_field :rate_all, id: :review_star, class:'form-control' %>
    </div>
    <script>
    $(document).on('turbolinks:load', function() {
      $('#star_all').empty();
      $('#star_all').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'book[rate_all]',
        half: true,
      });
    })
    </script>





  <% else %>
    <%= render "static_rate", book: book %>
  <% end %>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>